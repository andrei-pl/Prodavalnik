<Page
    x:Class="Prodavalnik.PhotoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Prodavalnik"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Button Click="CapturePhoto_Click" Content="Initialize Camera" />
                <Button Name="previewbtn" IsEnabled="False" Content="Start Capture Preview" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Name="capturebtn" IsEnabled="False" Content="Capture Photo"/>
                <Button Name="stop" IsEnabled="False" Content="Stop Capture Preview" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Image x:Name="imagePreivew" Stretch="None" Width="320" Height="240" Margin="40,0" />
                <CaptureElement x:Name="capturePreview" Width="320" Height="240" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
